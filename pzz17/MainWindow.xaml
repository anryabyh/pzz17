<Window x:Class="pzz17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pzz17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Height="25" Click="Button_Click">Click me please</Button>
            <ProgressBar x:Name="progressBar" Maximum="100" Width="574" Height="30" ValueChanged="progressBar_ValueChanged" />
            <TextBlock x:Name="textBlock1" Height="13" Background="Aquamarine"/>
            <InkCanvas x:Name="incCanv" Height="563" ></InkCanvas>
        </StackPanel>
        
    </Grid>
</Window>
